{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "esnext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"esnext"
		],
		"module": "commonjs",
		"jsx": "react-jsx",
		"allowJs": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmitOnError": false,
		"skipLibCheck": true,	
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"include": ["./src"]
}