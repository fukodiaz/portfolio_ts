{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es6",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"esnext"
		],
		"module": "es6",
		"jsx": "react",
		"allowJs": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmitOnError": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"include": ["./src"]
}